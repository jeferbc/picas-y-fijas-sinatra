<h1 class="text-center">Picas y Fijas!!</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form action="/intent">
        <div class="form-group">
          <label for="Number">Type the Number</label>
          <input type="number" class="form-control" id="Number" placeholder="Number" name = "number">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <h1><%= @validation %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @first_time == false %>
        <table class="table table-striped table-bordered">
          <tr>
            <th>Attemp</th>
            <th>Number</th>
            <th>Picas</th>
            <th>Fijas</th>
          </tr>
          <% @object_number.each.with_index do |v,index| %>
            <tr>
              <td><%= index %></td>
              <td><%= v.number %></td>
              <td><%= v.picas %></td>
              <td><%= v.fijas %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>
