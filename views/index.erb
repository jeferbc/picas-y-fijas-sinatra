<h1 class="text-center">Picas y Fijas!!</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form action="/intent">
        <div class="form-group">
          <label for="Number">Type the Number</label>
          <input type="number" class="form-control" id="Number" placeholder="Number" name = "number">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        <h1><%= @validation %></h1>
      </form>
    </div>
  </div>
</div>
<% if cookies[:first_time] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table">
        <%@array.each do |v|%>
          <tr>
            <td><%=v%></td>
            <td><%=v%></td>
            <td><%=v%></td>
            <td><%=v%></td>
          </tr>
        <%end%>
      </table>
    </div>
  </div>
</div>
<% end %>
