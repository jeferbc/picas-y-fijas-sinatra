<h1 class="text-center">Pikes and fixed!!</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form action="/intent">
        <div class="form-group">
          <label for="Number">Type the Number</label>
          <input type="number" class="form-control" placeholder="Number" name = "number">
          <div class="input-group">
            <% if @first_time == false %>
              <label>Select the amount of digits</label>
              <% 9.times do |index| %>
                <% if index == 2 %>
                <label class="checkbox-inline">
                  <input type="radio" value="<%= index+2 %>" name = "level" checked="checked"><%= index+2 %>
                </label>
                <% else %>
                <label class="checkbox-inline">
                  <input type="radio" value="<%= index+2 %>" name = "level"><%= index+2 %>
                </label>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
        <button type="submit" class="btn btn-default">Try</button>
      </form>
      <h1><%= @validation %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if   @first_time == true%>
        <table class="table table-striped table-bordered backtable">
          <tr>
            <th>Attemp</th>
            <th>Number</th>
            <th>Pikes</th>
            <th>Fixed</th>
          </tr>
          <% @object_number.each.with_index do |v,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= v.number %></td>
              <td><%= v.picas %></td>
              <td><%= v.fijas %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>
